<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/title.txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/title_activity"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="@string/title_activity" />

    <EditText
        android:id="@+id/numberInteger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="@string/sub_text"
        android:inputType="number"
        android:minHeight="48dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/radioOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/optionBinary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/binary"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/optionOctal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/octal"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/optionHexa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hexadecimal"
            tools:ignore="TouchTargetSizeCheck" />

    </RadioGroup>

    <Button
        android:id="@+id/button_convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/button_convert" />

    <TextView
        android:id="@+id/textResponse"
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:layout_marginTop="20dp" />

</LinearLayout>