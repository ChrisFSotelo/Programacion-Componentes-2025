<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Título -->
    <TextView
        android:id="@+id/tv_titulo_celular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agrega un nuevo celular"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="4dp" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tv_subtitulo_celular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escribe el número que quieras usar como llave."
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="24dp" />

    <!-- Campo de texto -->
    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="000 000 0000"
        android:inputType="phone"
        android:maxLength="10"
        android:textColor="#000000"
        android:textSize="16sp"
        android:backgroundTint="#CCCCCC" />

    <!-- Botón continuar -->
    <Button
        android:id="@+id/btn_agregar_llave_celular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:enabled="false"
        android:layout_marginTop="36dp"
        android:backgroundTint="#D3D3D3"
        android:textColor="#FFFFFF" />
</LinearLayout>
