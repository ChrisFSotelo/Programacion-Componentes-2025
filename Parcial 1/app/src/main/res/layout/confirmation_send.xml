<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Confirmemos!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Revisemos que los datos que tenemos sean correctos para hacer el envío a la persona que tú quieres."
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />

        <!-- Advertencia -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Si envías a otro banco entre lunes y jueves, el dinero llegará a más tardar al otro día."
            android:textColor="#8C00FF"
            android:background="#F3E9FF"
            android:padding="10dp"
            android:textSize="13sp"
            android:layout_marginBottom="20dp" />

        <!-- Reusable item layout: label + value -->
        <TextView style="@style/DatoTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿A qué banco vas a enviar?" />
        <TextView
            android:id="@+id/tvBanco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            style="@style/DatoValor" />

        <TextView style="@style/DatoTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Cuál es el número de la cuenta?" />
        <TextView
            android:id="@+id/tvNumeroCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            style="@style/DatoValor" />

        <TextView style="@style/DatoTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Qué tipo de documento tiene?" />
        <TextView
            android:id="@+id/tvTipoDocumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            style="@style/DatoValor" />

        <TextView style="@style/DatoTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Cómo es el número de documento?" />
        <TextView
            android:id="@+id/tvNumeroDocumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            style="@style/DatoValor" />

        <TextView style="@style/DatoTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monto" />
        <TextView
            android:id="@+id/tvMonto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            style="@style/DatoValor" />

        <TextView style="@style/DatoTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Impuesto del 4X1.000" />
        <TextView
            android:id="@+id/tvImpuesto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            android:text="$ 0"
            style="@style/DatoValor" />

        <TextView style="@style/DatoTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cobro de envío" />
        <TextView
            android:id="@+id/tvCobroEnvio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            style="@style/DatoValor" />

        <TextView style="@style/DatoTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Qué tipo de cuenta es?" />
        <TextView
            android:id="@+id/tvTipoCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            style="@style/DatoValor" />

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="32dp">

            <Button
                android:id="@+id/btnEnviar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Sí, enviar"
                android:backgroundTint="#8C00FF"
                android:textColor="#FFFFFF" />

            <View
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/btnSalir"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Salir"
                android:backgroundTint="#CCCCCC"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
