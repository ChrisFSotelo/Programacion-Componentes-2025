<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewTitular"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/containerTitular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Encabezado -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Listo! vas a enviar"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <!-- Monto -->
        <TextView
            android:id="@+id/tvMonto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$100"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#8C00FF"
            android:layout_marginBottom="4dp" />

        <!-- Impuesto -->
        <TextView
            android:id="@+id/tvImpuesto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ $0 por impuesto del 4X1.000"
            android:textSize="14sp"
            android:textColor="#8C00FF"
            android:layout_marginBottom="24dp" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continuemos, ¿a quién vas a enviar?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Nombre del destinatario -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Cómo se llama?"
            android:textColor="#888888"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etNombreTitular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Juan Rivera"
            android:maxLength="70"
            android:layout_marginBottom="16dp" />

        <!-- Tipo de documento -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Qué tipo de documento tiene?"
            android:textColor="#888888"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spinnerTipoDocumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Número de documento -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Cómo es el número de documento?"
            android:textColor="#888888"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etNumeroDocumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej. 1019087..."
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <!-- Motivo (opcional) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Cuál es el motivo? (opcional)"
            android:textColor="#888888"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etMotivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: el almuerzo"
            android:layout_marginBottom="32dp" />

        <!-- Botón siguiente -->
        <ImageButton
            android:id="@+id/btnSiguiente"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_arrow_forward"
            android:background="@drawable/circle_background"
            android:backgroundTint="#8C00FF"
            android:layout_gravity="end"
            android:contentDescription="Continuar" />

    </LinearLayout>
</ScrollView>
